{
    "name": "@anolilab/cerebro",
    "version": "0.0.0",
    "private": true,
    "description": "A delightful toolkit for building Node-powered CLIs.",
    "repository": "anolilab/cerebro",
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de",
        "url": "https://github.com/prisis"
    },
    "type": "module",
    "workspaces": [
        "packages/cerebro-core"
    ],
    "scripts": {
        "preinstall": "node verify-node-version.cjs",
        "postinstall": "husky install",
        "lint:staged": "lint-staged",
        "lint:text": "textlint ./.build/ISSUE_TEMPLATE/** ./src/** ./docs/** ./README.md ./UPGRADE.md --dry-run",
        "prettier": "prettier --config=.prettierrc.cjs --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "sort-package-json": "sort-package-json packages/**/package.json",
        "build": "yarn workspaces foreach run build",
        "build:core": "yarn workspace @anolilab/cerebro run build",
        "build:filesystem": "yarn workspace @anolilab/cerebro-filesystem-extension run build",
        "build:http": "yarn workspace @anolilab/cerebro-http-extension run build",
        "build:notify": "yarn workspace @anolilab/cerebro-notify-extension run build",
        "build:package-manager": "yarn workspace @anolilab/cerebro-package-manager-extension run build",
        "build:patching": "yarn workspace @anolilab/cerebro-patching-extension run build",
        "build:semvar": "yarn workspace @anolilab/cerebro-semvar-extension run build",
        "build:strings": "yarn workspace @anolilab/cerebro-strings-extension run build",
        "build:template": "yarn workspace @anolilab/cerebro-template-extension run build",
        "lint": "eslint .",
        "test": "jest",
        "jest:integration": "yarn build && jest --config=./.circleci/jest-integration.config.json",
        "jest:watch": "jest --watch",
        "snapupdate": "jest --updateSnapshot",
        "windows:test": "yarn && yarn format && yarn jest:test && yarn clean-build && yarn compile && yarn copy-templates && jest --config=./.circleci/jest-integration.config.json",
        "ci:test": "yarn lint && yarn jest:test --maxWorkers=2 && yarn integration",
        "console:dev:esm": "rimraf ./console/dist && tsc --module es2020 --target es5 --outDir ./console/dist --watch ./console/cli.ts"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --config=./.prettierrc.cjs --write",
            "eslint --fix",
            "git add"
        ],
        "*.md": [
            "prettier --config=./.prettierrc.cjs --write",
            "git add"
        ],
        "*.json": [
            "prettier --config=./.prettierrc.cjs --write",
            "git add"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "@anolilab/eslint-config": "^2.1.1",
        "@anolilab/prettier-config": "^2.0.1",
        "@anolilab/textlint-config": "^2.0.4",
        "@commitlint/cli": "12.1.4",
        "@commitlint/config-conventional": "12.1.4",
        "@commitlint/core": "12.1.4",
        "@qiwi/multi-semantic-release": "3.15.0",
        "@semantic-release/changelog": "5.0.1",
        "@semantic-release/commit-analyzer": "8.0.1",
        "@semantic-release/exec": "5.0.0",
        "@semantic-release/git": "9.0.0",
        "@semantic-release/github": "7.2.3",
        "@semantic-release/npm": "7.1.3",
        "@semantic-release/release-notes-generator": "9.0.3",
        "@types/jest": "26.0.24",
        "@types/node": "^16.3.2",
        "@typescript-eslint/eslint-plugin": "4.28.3",
        "@typescript-eslint/parser": "4.28.3",
        "babel-eslint": "^10.1.0",
        "commitizen": "^4.2.4",
        "conventional-changelog-conventionalcommits": "^4.6.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.30.0",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-node": "^11.1.0",
        "husky": "7.0.1",
        "jest": "27.0.6",
        "jest-mock": "27.0.6",
        "lint-staged": "^11.0.1",
        "prettier": "2.3.2",
        "rimraf": "^3.0.2",
        "semantic-release": "^17.4.4",
        "sort-package-json": "1.50.0",
        "ts-jest": "27.0.3",
        "ts-node": "10.1.0",
        "typescript": "4.3.5"
    }
}
