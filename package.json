{
    "name": "@anolilab/cerebro",
    "version": "0.0.0",
    "private": true,
    "description": "A delightful toolkit for building Node-powered CLIs.",
    "repository": "github:anolilab/cerebro",
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de",
        "url": "https://github.com/prisis"
    },
    "workspaces": [
        "!console",
        "packages/cerebro-core",
        "packages/cerebro-filesystem-extension",
        "packages/cerebro-http-extension",
        "packages/cerebro-notify-extension",
        "packages/cerebro-package-manager-extension",
        "packages/cerebro-patching-extension",
        "packages/cerebro-semver-extension",
        "packages/cerebro-strings-extension",
        "packages/cerebro-template-extension"
    ],
    "scripts": {
        "build": "nx run-many --target=build --all --parallel",
        "check": "manypkg check",
        "ci:test": "pnpm lint && pnpm jest:test --maxWorkers=2 && pnpm integration",
        "clean": "nx run-many --target=clean --all --parallel && rimraf node_modules",
        "graph": "nx dep-graph",
        "preinstall": "node verify-node-version.cjs && pnpx only-allow pnpm",
        "jest:integration": "pnpm build && jest --config=./.circleci/jest-integration.config.json",
        "jest:watch": "jest --watch",
        "lint:eslint": "nx run-many --target=lint:eslint --all --parallel",
        "lint:eslint:fix": "nx run-many --target=lint:eslint:fix --all --parallel",
        "lint:fix": "pnpm run lint --fix",
        "lint:text": "textlint ./.github/ISSUE_TEMPLATE/** ./packages/** ./README.md ./UPGRADE.md --parallel --experimental --dry-run",
        "lint:text:fix": "pnpm run lint:text --fix",
        "prepare": "is-ci || husky install",
        "prettier": "prettier --config=.prettierrc.cjs --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "snapupdate": "jest --updateSnapshot",
        "sort-package-json": "sort-package-json packages/**/package.json ./package.json console/package.json",
        "test": "NODE_ENV=test jest --watch",
        "test:config": "NODE_ENV=test jest --showConfig",
        "test:coverage": "NODE_ENV=test jest --coverage",
        "test:coverage:group:no-integration": "NODE_ENV=test jest --group=-integration --coverage",
        "test:generate-output": "jest --json --outputFile=.jest-test-results.json || true",
        "test:group:api": "NODE_ENV=test jest --group=api --watchAll",
        "test:group:components": "NODE_ENV=test jest --group=components --watchAll",
        "test:group:integration": "NODE_ENV=test jest --group=integration --watchAll",
        "test:group:unit": "NODE_ENV=test jest --group=unit --watchAll",
        "test:group:utils": "NODE_ENV=test jest --group=utils --watchAll",
        "test:once": "NODE_ENV=test jest --runInBand --detectOpenHandles",
        "test:once:group:no-integration": "NODE_ENV=test jest --group=-integration"
    },
    "dependencies": {
        "@anolilab/prettier-config": "^3.0.2",
        "@anolilab/textlint-config": "^4.0.5",
        "@manypkg/cli": "^0.19.1",
        "@nrwl/cli": "latest",
        "@nrwl/nx-cloud": "latest",
        "@nrwl/tao": "^14.6.4",
        "@nrwl/workspace": "latest",
        "@octokit/rest": "^19.0.4",
        "@qiwi/multi-semantic-release": "6.5.1",
        "@types/node": "^18.7.15",
        "browserslist-config-anolilab": "^3.0.4",
        "commitizen": "^4.2.5",
        "core-js": "^3.25.0",
        "husky": "^8.0.1",
        "is-ci": "^3.0.1",
        "jest": "^29.1.2",
        "jest-mock": "^29.1.2",
        "lint-staged": "^13.0.3",
        "nx": "latest",
        "plop": "^3.1.1",
        "prettier": "^2.7.1",
        "prettier-plugin-prisma": "^4.2.0",
        "pretty-quick": "^3.1.3",
        "rimraf": "^3.0.2",
        "semantic-release": "^19.0.5",
        "sort-package-json": "^1.57.0",
        "textlint": "^12.2.1",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    },
    "devDependencies": {
        "read-pkg": "^7.1.0",
        "tsup": "^6.2.3"
    },
    "packageManager": "pnpm@7.5.2",
    "engines": {
        "node": ">=16.0"
    }
}
