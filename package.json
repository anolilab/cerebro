{
    "name": "@anolilab/cerebro",
    "version": "0.0.0",
    "private": true,
    "description": "A delightful toolkit for building Node-powered CLIs.",
    "repository": "github:anolilab/cerebro",
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de",
        "url": "https://github.com/prisis"
    },
    "workspaces": [
        "!console",
        "packages/cerebro-core",
        "packages/cerebro-filesystem-extension",
        "packages/cerebro-http-extension",
        "packages/cerebro-notify-extension",
        "packages/cerebro-package-manager-extension",
        "packages/cerebro-patching-extension",
        "packages/cerebro-semver-extension",
        "packages/cerebro-strings-extension",
        "packages/cerebro-template-extension"
    ],
    "scripts": {
        "check": "manypkg check",
        "preinstall": "node verify-node-version.cjs",
        "postinstall": "husky install && preconstruct dev",
        "lint:staged": "lint-staged",
        "lint:text": "textlint \"./packages/**/README.md\" ./README.md ./UPGRADE.md --parallel --experimental",
        "lint:text:fix": "yarn run lint:text --fix",
        "prettier": "prettier --config=.prettierrc.cjs --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "sort-package-json": "sort-package-json packages/**/package.json",
        "build": "preconstruct build",
        "lint": "cross-env NO_LOGS=true eslint -c ./.eslintrc.cjs --ext .js,.ts ./packages",
        "lint:fix": "yarn run lint --fix",
        "test": "jest",
        "jest:integration": "yarn build && jest --config=./.circleci/jest-integration.config.json",
        "jest:watch": "jest --watch",
        "snapupdate": "jest --updateSnapshot",
        "windows:test": "yarn && yarn format && yarn jest:test && yarn clean-build && yarn compile && yarn copy-templates && jest --config=./.circleci/jest-integration.config.json",
        "ci:test": "yarn lint && yarn jest:test --maxWorkers=2 && yarn integration"
    },
    "lint-staged": {
        "*.{js,jsx,tsx,ts,less,md,json,css,scss,sass}": "prettier --config=.prettierrc.cjs --write",
        "*.{js,jsx,ts,tsx}": "eslint -c ./.eslintrc.cjs --fix"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "@anolilab/babel-preset": "^2.2.2",
        "@anolilab/eslint-config": "^2.1.4",
        "@anolilab/prettier-config": "^2.0.2",
        "@anolilab/textlint-config": "^2.0.5",
        "@babel/core": "^7.15.0",
        "@babel/plugin-syntax-jsx": "^7.14.5",
        "@babel/preset-typescript": "^7.15.0",
        "@babel/runtime": "^7.15.3",
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@commitlint/core": "^13.1.0",
        "@manypkg/cli": "^0.18.0",
        "@preconstruct/cli": "^2.1.1",
        "@qiwi/multi-semantic-release": "^3.15.0",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/commit-analyzer": "^8.0.1",
        "@semantic-release/exec": "^5.0.0",
        "@semantic-release/git": "^9.0.0",
        "@semantic-release/github": "^7.2.3",
        "@semantic-release/npm": "^7.1.3",
        "@semantic-release/release-notes-generator": "^9.0.3",
        "@types/jest": "^27.0.1",
        "@types/node": "^12.20.20",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "babel-eslint": "^10.1.0",
        "commitizen": "^4.2.4",
        "conventional-changelog-conventionalcommits": "^4.6.0",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.32.0",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-node": "^11.1.0",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "jest-mock": "^27.0.6",
        "lint-staged": "^11.1.2",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "semantic-release": "^17.4.6",
        "sort-package-json": "^1.50.0",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1",
        "typescript": "^4.3.5"
    },
    "packageManager": "yarn@3.0.1",
    "preconstruct": {
        "packages": [
            "console",
            "packages/cerebro-core",
            "packages/cerebro-filesystem-extension",
            "packages/cerebro-http-extension",
            "packages/cerebro-notify-extension",
            "packages/cerebro-package-manager-extension",
            "packages/cerebro-patching-extension",
            "packages/cerebro-semver-extension",
            "packages/cerebro-strings-extension",
            "packages/cerebro-template-extension"
        ]
    }
}
